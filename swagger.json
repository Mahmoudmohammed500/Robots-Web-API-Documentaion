            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "responses": { "200": { "description": "Log deleted successfully" } }
      }
    }
  },

  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "Username": { "type": "string", "example": "Ahmed" },
          "Password": { "type": "string", "example": "123456" },
          "TelephoneNumber": { "type": "string", "example": "+201234567890" },
          "ProjectName": { "type": "string", "example": "AI Robot" }
        }
      },
      "Project": {
        "type": "object",
        "properties": {
          "ProjectName": { "type": "string", "example": "Airport Bot" },
          "Description": {
            "type": "string",
            "example": "Smart robot for airport security"
          },
          "Location": { "type": "string", "example": "Saudi Arabia" },
          "Image": { "type": "string", "example": "uploads/robot.jpg" }
        }
      },
      "Robot": {
        "type": "object",
        "properties": {
          "RobotName": { "type": "string", "example": "betaaaaa Update" },
          "Image": {
            "type": "string",
            "example": "UUUUU_robot_69241fab05ba86.27314663.jpeg"
          },
          "projectId": { "type": "string", "example": "18" },
          "isTrolley": { "type": "string", "example": "1" },
          "Sections": {
            "type": "object",
            "properties": {
              "main": {
                "type": "object",
                "properties": {
                  "Voltage": { "type": "string", "example": "15" },
                  "Cycles": { "type": "string", "example": "15" },
                  "Status": { "type": "string", "example": "ggggggu" },
                  "ActiveBtns": {
                    "type": "array",
                    "items": { "type": "string" },
                    "example": []
                  },
                  "Topic_subscribe": {
                    "type": "string",
                    "example": "dff/fffu"
                  },
                  "Topic_main": { "type": "string", "example": "fff/ffu" },
                  "mqttUrl": {
                    "type": "string",
                    "example": "dfdsdddsd/ddduuU"
                  },
                  "mqttUsername": {
                    "type": "string",
                    "example": "fffffffffuuU"
                  },
                  "mqttPassword": { "type": "string", "example": "d554445uuU" }
                }
              },
              "car": {
                "type": "object",
                "example": {
                  "Voltage": "15",
                  "Cycles": "15",
                  "Status": "vvvvvvvvvuuuu",
                  "ActiveBtns": [],
                  "Topic_subscribe": "xdddd/ddduuu",
                  "Topic_main": "ddd/d/ddduuuU",
                  "mqttUrl": "dfdsdddsd/ddduuuU",
                  "mqttUsername": "fffffffffuuU",
                  "mqttPassword": "d554445uuuuU"
                }
              }
            }
          }
        },
        "required": ["RobotName", "projectId", "isTrolley", "Sections"]
      },
      "Button": {
        "type": "object",
        "properties": {
          "BtnName": { "type": "string", "example": "Start" },
          "RobotId": { "type": "integer", "example": 8 },
          "Color": { "type": "string", "example": "#FF0000" },
          "Operation": { "type": "string", "example": "/start" },
          "projectId": { "type": "integer", "example": 10 }
        },
        "required": ["BtnName", "RobotId", "Operation", "projectId"]
      },

      "Notification": {
        "type": "object",
        "properties": {
          "projectId": { "type": "integer", "example": 5 },
          "robotId": { "type": "integer", "example": 3 },
          "message": { "type": "string", "example": "Battery level low" },
          "type": { "type": "string", "example": "alert" },
          "date": { "type": "string", "example": "2025-11-05" },
          "time": { "type": "string", "example": "14:25:00" }
        }
      },
      "Log": {
        "type": "object",
        "properties": {
          "projectId": { "type": "integer", "example": 5 },
          "robotId": { "type": "integer", "example": 3 },
          "message": {
            "type": "string",
            "example": "Robot connected successfully"
          },
          "type": { "type": "string", "example": "info" },
          "date": { "type": "string", "example": "2025-11-05" },
          "time": { "type": "string", "example": "14:26:30" }
        }
      }
    }
  }
}
