    "/robots": {
      "get": {
        "tags": ["Robots"],
        "summary": "Get all robots",
        "responses": {
          "200": { "description": "List of all robots" }
        }
      },
      "post": {
        "tags": ["Robots"],
        "summary": "Create a new robot",
        "description": "⚠️ Logic Note: If `isTrolley` = `false`, then the `car` object should be empty `{}` and system will do it automoticaly by sql and js.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/Robot" }
            }
          }
        },
        "responses": {
          "201": { "description": "Robot created successfully" }
        }
      }
    },
    "/robots/{id}": {
      "get": {
        "tags": ["Robots"],
        "summary": "Get a robot by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "responses": {
          "200": { "description": "Robot details" },
          "404": { "description": "Robot not found" }
        }
      },
      "put": {
        "tags": ["Robots"],
        "summary": "Update a robot by ID",
        "description": "⚠️ Logic Note : If `isTrolley` = `false`, then the `car` object should be empty `{}` and system will do it automoticaly by sql and js.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/Robot" }
            }
          }
        },
        "responses": {
          "200": { "description": "Robot updated successfully" }
        }
      },
      "delete": {
        "tags": ["Robots"],
        "summary": "Delete a robot by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "responses": {
          "200": { "description": "Robot deleted successfully" }
        }
      }
    },
    "/robots/": {
      "delete": {
        "tags": ["Robots"],
        "summary": "Delete all robots",
        "responses": {
          "200": { "description": "All robots deleted successfully" }
        }
      }
    },

    "/buttons": {
      "get": {
        "tags": ["Buttons"],
        "summary": "Get all buttons",
        "description": "Retrieve a list of all buttons in the system.",
        "responses": {
          "200": {
            "description": "List of all buttons"
          }
        }
      },
      "post": {
        "tags": ["Buttons"],
        "summary": "Create a new button",
        "description": "Add a new button and automatically link it to a specific robot section if it exists. If the section does not exist in the robot, the button will NOT be added.",
        "parameters": [
          {
            "name": "section",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "example": "main"
            },
            "description": "Robot section name to which the button should be added (e.g., main or car)"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Button"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "✅ Button created and linked to robot section successfully",
            "content": {
              "application/json": {
                "example": {
                  "message": "Button created and linked successfully"
                }
              }
            }
          },
          "404": {
            "description": "❌ Section not found in robot",
            "content": {
              "application/json": {
                "example": {
                  "message": "This section does not exist for the specified robot"
                }
              }
            }
          },
          "400": {
            "description": "Missing required parameters"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/buttons/{id}": {
      "get": {
        "tags": ["Buttons"],
        "summary": "Get button by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Button details"
          },
          "404": {
            "description": "Button not found"
          }
        }
      },
      "put": {
        "tags": ["Buttons"],
        "summary": "Update button by ID",
        "description": "Update an existing button if it belongs to the specified robot and section. If the button is not part of that section, the update will NOT be applied.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "section",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "example": "main"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Button"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "✅ Button updated successfully",
            "content": {
              "application/json": {
                "example": {
                  "message": "Button updated successfully"
                }
              }
            }
          },
          "404": {
            "description": "❌ Button not linked to this robot or section",
            "content": {
              "application/json": {
                "example": {
                  "message": "This button was not linked to the specified robot or section"
                }
              }
            }
          },
          "400": {
            "description": "Missing parameters"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      },
      "delete": {
        "tags": ["Buttons"],
        "summary": "Delete button by ID",
        "description": "Delete a button only if it belongs to the specified robot and section. Otherwise, deletion will be rejected.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "section",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "example": "main"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "✅ Button deleted successfully",
            "content": {
              "application/json": {
                "example": {
                  "message": "Button deleted successfully"
                }
              }
            }
          },
          "404": {
            "description": "❌ Button not found or not linked to robot section",
            "content": {
              "application/json": {
                "example": {
                  "message": "This button is not part of the specified robot or section"
                }
              }
            }
          },
          "400": {
            "description": "Missing Button ID or section parameter"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/buttons/": {
      "delete": {
        "tags": ["Buttons"],
        "summary": "Delete all buttons",
        "responses": {
          "200": {
            "description": "All buttons deleted successfully"
          }
        }
      }
    },

