{
  "openapi": "3.0.0",
  "info": {
    "title": "Robots API Documentation",
    "version": "1.0.0",
    "description": "API documentation for managing Users, Projects, Robots, Buttons, Notifications, Logs, and Authentication in the Robots system."
  },
  "servers": [
    {
      "url": "http://localhost/robotsapis/api/",
      "description": "Local API server"
    }
  ],
  "tags": [
    {
      "name": "Authentication",
      "description": "User login and authentication endpoints"
    },
    { "name": "Users", "description": "Endpoints for managing users" },
    { "name": "Projects", "description": "Endpoints for managing projects" },
    { "name": "Robots", "description": "Endpoints for managing robots" },
    {
      "name": "Buttons",
      "description": "Endpoints for managing buttons assigned to robots"
    },
    {
      "name": "Notifications",
      "description": "Endpoints for managing notifications between robots and projects"
    },
    {
      "name": "Logs",
      "description": "Endpoints for managing logs related to robot and project activities"
    },
    {
      "name": "SendEmail",
      "description": "Email Sending & Alerts Endpoint"
    }
  ],
  "paths": {
    "/sendEmail": {
      "post": {
        "tags": ["SendEmail"],
        "summary": "Send email alert notification",
        "description": "Endpoint used to send automated alerts to operator email.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "example": "mahmoudmohammed123555@gmail.com"
                  },
                  "message": {
                    "type": "string",
                    "example": "Alert ::: Volt is less than 15"
                  }
                },
                "required": ["email", "message"]
              },
              "example": {
                "email": "mahmoudmohammed123555@gmail.com",
                "message": "Alert ::: Volt is less than 15"
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Email sent successfully" },
          "400": { "description": "Invalid request format" },
          "500": { "description": "Server error while sending email" }
        }
      }
    },

    "/login": {
      "post": {
        "tags": ["Authentication"],
        "summary": "Authenticate user login",
        "description": "Validates a user's credentials (Username & Password) and returns user details on success.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "Username": { "type": "string", "example": "mahmoud" },
                  "Password": { "type": "string", "example": "123456" }
                },
                "required": ["Username", "Password"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login successful",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Login successful"
                    },
                    "user": {
                      "type": "object",
                      "properties": {
                        "id": { "type": "integer", "example": 1 },
                        "Username": { "type": "string", "example": "mahmoud" },
                        "TelephoneNumber": {
                          "type": "string",
                          "example": "+201234567890"
                        },
                        "ProjectName": {
                          "type": "string",
                          "example": "AI Robot"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": { "description": "Missing Username or Password" },
          "401": { "description": "Invalid username or password" },
          "500": { "description": "Database error" }
        }
      }
    },

    "/users": {
      "get": {
        "tags": ["Users"],
        "summary": "Get all users",
        "responses": { "200": { "description": "List of all users" } }
      },
      "post": {
        "tags": ["Users"],
        "summary": "Create a new user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/User" }
            }
          }
        },
        "responses": { "201": { "description": "User created successfully" } }
      }
    },
    "/users/{id}": {
      "get": {
        "tags": ["Users"],
        "summary": "Get a user by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "responses": {
          "200": { "description": "User details" },
          "404": { "description": "User not found" }
        }
      },
      "put": {
        "tags": ["Users"],
        "summary": "Update a user by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/User" }
            }
          }
        },
        "responses": { "200": { "description": "User updated successfully" } }
      },
      "delete": {
        "tags": ["Users"],
        "summary": "Delete a user by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "responses": { "200": { "description": "User deleted successfully" } }
      }
    },
    "/users/": {
      "delete": {
        "tags": ["Users"],
        "summary": "Delete all users",
        "responses": {
          "200": { "description": "All users deleted successfully" }
        }
      }
    },

